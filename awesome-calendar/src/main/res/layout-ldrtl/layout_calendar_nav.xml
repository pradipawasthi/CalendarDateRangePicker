<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rlHeaderCalendar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dateTitlePaddingBottom">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgVNavLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="4dp"
        android:src="@drawable/ic_right_24" />

    <com.archit.calendardaterangepicker.customviews.CustomTextView
        android:id="@+id/tvYearTitle"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginHorizontal="34dp"
        android:layout_height="match_parent"
        android:tag="dateTitle"
        android:textColor="#1a181e"
        android:fontFamily="@font/galano_grotesque"
        android:text="FEBRUARY 2014"
        android:lineSpacingExtra="8sp"
        android:textSize="@dimen/text_size_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgVNavRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_left_24" />
</LinearLayout>